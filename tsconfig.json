{
  "compilerOptions": {
    "moduleDetection": "force",
    "noEmit": false,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "index.ts",
    "schemas.ts"
  ],
  "exclude": ["node_modules", "dist"]
}